<p id="notice"><%= notice %></p>

<h1>Model Types <%= @model.present? ? " for #{@model.name}" : '' %>
  <%= link_to 'Back', (@model.present? ? models_path(org_id: @model.organization_id) : models_path ), class: 'btn btn-default pull-right' %>
  <%= link_to 'Add Model Type', new_model_type_path, class: 'btn btn-default pull-right marr-med' %>
</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Model type slug</th>
      <th>Model type code</th>
      <th>Base price</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @model_types.each_with_index do |model_type, index| %>
      <tr>
        <th scope="row"><%= index + 1 %></th>
        <td><%= model_type.name %></td>
        <td><%= model_type.model_type_slug %></td>
        <td><%= model_type.model_type_code %></td>
        <td><%= model_type.base_price %></td>
        <td><%= link_to 'Show', model_type, class: 'btn btn-default' %>
            <%= link_to 'Edit', edit_model_type_path(model_type), class: 'btn btn-default' %>
            <%= link_to 'Destroy', model_type, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
